<div class="container">
    <img src="/assets/images/banner.png" alt="Banner" id="banner" />
    <div class="row">
        <div class="col-md-6" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-9">
                    <pre>{{this.id}}.{{this.burger_name}}
					</pre>
                </div>
                <div class="col-md-3">
                    <form class="devour-form button-size">
                        <button type="submit" class="btn-block btn-dark burger_id" value={{this.id}}>Devour it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" placeholder="Enter a burger you want to eat!"
                    id="enter_text">
                <button type="submit" class="btn-block btn-dark" id="text-enter-button">Submit</button>
            </form>
        </div>
    </div>
</div>